<!-- app/views/layouts/application.html.erb -->
<!DOCTYPE html>
<html>
  <head>
    <title>Task Tracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row">
        <!-- Left-side navigation menu -->
          <% if user_signed_in? %>
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
              <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                  <li class="nav-item">
                    <%= link_to 'Home', authenticated_root_path, class: 'nav-link' %>
                  </li>
                  <li class="nav-item">
                    <div class="dropdown">
                      <button class="btn btn-link nav-link dropdown-toggle" type="button" id="boardsDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        Boards
                      </button>
                      <ul class="dropdown-menu" aria-labelledby="boardsDropdown">

                        <% if current_user.manager? || current_user.admin? %>
                          <li><%= link_to 'Add New Board', new_board_path, class: 'dropdown-item' %></li>
                        <% end %>

                        <% if @boards.present? %> <!-- Check if @boards is not nil or empty -->
                          <% @boards.each do |board| %>
                            <li><%= link_to board.name, board_path(board), class: 'dropdown-item' %></li>
                          <% end %>
                        <% else %>
                          <li class="dropdown-item">No boards available</li>
                        <% end %>
                      </ul>
                    </div>
                  </li>
                  <% if current_user&.admin? %>
                    <li class="nav-item">
                      <%= link_to 'Admin', admin_page_index_path, class: 'nav-link' %>
                    </li>
                  <% end %>
                  <li class="nav-item">
                    <%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete }, class: 'nav-link' %>
                  </li>
                </ul>
              </div>
            </nav>
          <% end %>
        <!-- Main content area -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
          <%= yield %>
        </main>
      </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
