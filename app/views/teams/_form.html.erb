<!-- app/views/teams/_form.html.erb -->
<%= form_with(model: @team, local: true, class: 'bg-dark text-light p-4 rounded shadow') do |form| %>

  <div class="form-group mb-3">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control bg-secondary text-light' %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :users, "Assign Users to Team", class: 'form-label' %>
    <%= form.collection_select :user_ids, User.all, :id, :email, { prompt: "Select users" }, { multiple: true, class: 'form-control bg-secondary text-light' } %>
  </div>

  <!-- Add the board selection -->
  <div class="form-group mb-3">
    <%= form.label :boards, "Assign Boards to Team", class: 'form-label' %>
    <%= form.collection_select :board_ids, Board.all, :id, :name, { prompt: "Select boards" }, { multiple: true, class: 'form-control bg-secondary text-light' } %>
  </div>

  <div class="actions">
    <%= form.submit 'Save Team', class: 'btn btn-primary' %>
  </div>

<% end %>
