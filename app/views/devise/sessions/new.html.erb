<h2 class="text-center mb-4" style="margin-top: 30px;">Log in</h2>

<div class="d-flex justify-content-center align-items-center" style="height: 70vh;">
  <div class="bg-dark text-light p-4 rounded shadow-lg" style="width: 400px;">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'p-3' }) do |f| %>
      <div class="form-group mb-3">
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control bg-secondary text-light' %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :password, class: 'form-label' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control bg-secondary text-light' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: 'form-label ms-1' %>
        </div>
      <% end %>

      <div class="d-grid mb-3">
        <%= f.submit "Log in", class: 'btn btn-primary' %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
