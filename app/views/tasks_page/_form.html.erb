<%= form_with(model: task, url: task.new_record? ? board_tasks_page_index_path(@task.board) : board_tasks_page_path(@task.board, @task), local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :due_date %>
    <%= form.date_select :due_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :board_id, "Board" %>
    <%= form.collection_select :board_id, Board.all, :id, :name, prompt: "Select a Board", class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
