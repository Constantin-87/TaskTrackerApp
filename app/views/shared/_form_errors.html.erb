<% if object.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert" id="form_errors">
    <h4 class="alert-heading">
      <i class="bi bi-exclamation-triangle-fill me-2"></i> 
      Oops! There were errors with your submission:
    </h4>
    <ul class="mb-0">
      <% object.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <button type="button" class="btn-close" onclick="hideError()" aria-label="Close"></button>
  </div>
<% end %>
